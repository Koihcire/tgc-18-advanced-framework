{{#extends "base"}}
{{#block "content"}}
<h1>
    Products
</h1>
<a href="products/create" class="btn btn-sm btn-primary">Add New</a>
<table class="table">

    <h2>Search</h2>
    <form method="GET">
        {{{form}}}
        <input type="submit" class="mb-3 mt-3 btn btn-sm btn-primary" value="Search" />
    </form>

    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Cost</th>
            <th>Categories</th>
            <th>Tags</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>${{this.cost}}</td>
            <td>{{this.category.name}}</td>
            <td>{{#each this.tags}}
                <span class=" badge bg-dark">{{this.name}}</span>
                {{/each}}
            </td>
            <td><img src={{this.thumbnail_url}}></img></td>
            <td>
                <div>
                    <a href="products/{{this.id}}/update" class="btn btn-sm btn-primary">Update</a>
                    <a href="products/{{this.id}}/delete" class="btn btn-sm btn-danger ms-2">Delete</a>
                </div>
                <div>
                    <a href="cart/{{this.id}}/add" class="btn btn-sm btn-primary mt-2">Add to Cart</a>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/block}}
{{/extends}}